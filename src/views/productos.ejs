<!DOCTYPE html>
<html lang="en">
    
<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/header.ejs') %> 

    <main>
        <article class="ofertas">
            <% for (let i = 0; i < products.length; i++) { %>
            <div class="pro-oferta">
              <div class="imagen-prod">
                <img
                  class="imag"
                  src="/img/productos/<%=products[i].image %>"
                  alt="img-producto"
                />
              </div>
              <div class="ofer-detalle">
                <div class="pro-deta">
                  <div class="tip">
                    <a href="/productos/detail/<%= products[i].id %>"> <%= products[i].producto %> </a>
                  </div>
                  <a href="/productos/detail/<%= products[i].id %>" class="descu">
                    <%= products[i].price %>
                    <%= products[i].discount %>% OFF 
                  </a>
                </div>
                <div class="buys">
                  <a href="/productos/detail/<%= products[i].id %> " class="buys-btn">Comprar Ahora</a>
                </div>
              </div>
            </div>
            <% } %>
          </article>
    </main>
</body>

<%- include('./partials/footer.ejs') %> 

</html>

