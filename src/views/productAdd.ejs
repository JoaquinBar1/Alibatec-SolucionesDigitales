<!DOCTYPE html>
<html lang="es">
  <!--Head-->
  <%- include('./partials/head.ejs')%>

  <!--Body Code-->
  <body>
    <!--Main Code-->
    <main class="main-add">
      <!--Codigo Correspondiente a Section Formulario-->
      <div class="register">
        <form method="POST" action="/productos" id="form" class="datos" enctype="multipart/form-data">
          <!--Codigo Correspondiente a Logo de Formulario-->
          <div class="contenedor-logo">
            <a href="/"><img src="/img/at-logo-completo.png" alt="Logo de Alibatec"/></a>
          </div>
          <h3>Carga tus productos</h3>
          

          <!--Codigo Correspondiente a model-->
          <div class="formulario__grupo">
            <label for="model" class="formulario__label"></label>
            <div class="formulario__grupo-input">
              <input
                type="text"
                class="formulario__input"
                name="model"
                id="model"
                placeholder="Modelo del producto"
              />
              <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                  <%= errors.name.msg %> 
                </div>
              <% } %>
            </div>
          </div>
          

          <!--Codigo Correspondiente a price-->
          <div class="formulario__grupo">
            <label for="price" class="formulario__label"></label>
            <div class="formulario__grupo-input">
              <input
                type="number"
                class="formulario__input"
                name="price"
                id="price"
                placeholder="Precio"
              />
              <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                  <%= errors.name.msg %> 
                </div>
              <% } %>
            </div>
          </div>
          

          <!--Codigo Correspondiente a Descuento-->
          <div class="formulario__grupo">
            <label for="discount" class="formulario__label"></label>
            <div class="formulario__grupo-input">
                <input
                  type="number"
                  class="formulario__input"
                  name="discount"
                  placeholder="Descuento"
                />
                <% if (locals.errors && errors.name) { %>
                  <div class="text-danger">
                    <%= errors.name.msg %> 
                  </div>
                <% } %>
            </div>
          </div>
         

          <!--Codigo Correspondiente a vision general-->
          <div class="formulario__grupo">
            <label for="detail" class="formulario__label"></label>
            <div class="formulario__grupo-input">
                <textarea
                  class="formulario__input"
                  name="detail"
                  id="detail">Caracteristicas
                </textarea>
                <% if (locals.errors && errors.name) { %>
                  <div class="text-danger">
                    <%= errors.name.msg %> 
                  </div>
                <% } %>
            </div>
          </div>
         
          
          <!--Codigo Correspondiente a marca-->
        <div class="formulario__categoria">
          <label>Marca</label> 
          <select name="marca" id="marca">
           <% for (let i = 0; i < marca.length; i++) { %>
              <option value="<%= marca[i].id %>">
                <%= marca[i].tipo %> 
              </option>
            <% } %>
          </select>
      </div>
      
          <!--Codigo Correspondiente a Categoria-->         
          
          <div class="formulario__categoria">
            <label>Categoria</label> 
            <select name="category" id="category">
             <% for (let i = 0; i < category.length; i++) { %>
                <option value="<%= category[i].id %>">
                  <%= category[i].category %> 
                </option>
              <% } %>
            </select>
        </div>
        
        
        <!--Codigo Correspondiente al estado-->
        <div class="formulario__grupo">
          <label>Estado</label> 
          <select name="estado" id="estado">
           <% for (let i = 0; i < estado.length; i++) { %>
              <option value="<%= estado[i].id %>">
                <%= estado[i].estado %> 
              </option>
            <% } %>
          </select>
      </div>
      

          <!--Codigo Correspondiente a Imagen-->
          <div class="formulario__grupo">
            <label for="imagen" class="formulario__label">Imagen de Producto</label>
            <div class="formulario__grupo-input">
              <input
                type="file"
                name="imagen"
                multiple
                class="formulario__input"
                id="image"
              />
              <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                  <%= errors.name.msg %> 
                </div>
              <% } %>
            </div>
          </div>
          
          

          <!--Codigo Correspondiente a Boton de Carga-->
          <div class="formulario__grupo formulario__grupo-btn-enviar">
            <button type="submit" class="formulario__btn" id="btnSubmit">
              Cargar
            </button>
          </div>
        </form>

        <!--Codigo Correspondiente a Div Banner-->
        <div class="banner"> </div>
        
      </div>
    </main>
  </body>
</html>