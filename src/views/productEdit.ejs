<!DOCTYPE html>
<html lang="es">
  <!--Head-->
  <%- include('./partials/head.ejs')%>

  <!--Styles-->
  <link rel="stylesheet" href="/css/styles-prod-AddEdit.css"/>

  <!--Body Code-->
  <body>
    <!--Main Code-->
    <main>
      <!--Codigo Correspondiente a Section Formulario-->
      <div class="register">
        <form method="POST" action="/productos/edit/<%=product.id%>?_method=PUT" class="datos" enctype="multipart/form-data">
          <!--Codigo Correspondiente a Logo de Formulario-->
          <div class="contenedor-logo">
            <a href="/"><img src="/img/at-logo-completo.png" alt="Logo de Alibatec"/></a>
          </div>
          <h3>Edita tu Producto</h3>
          <h3><%=product.name%></h3>

          <!--Codigo Correspondiente a Nombre de Producto-->
          <div class="formulario__grupo">
            <label for="name" class="formulario__label"></label>
            <div class="formulario__grupo-input">
              <input
                type="text"
                class="formulario__input"
                name="name"
                id="name"
                placeholder="<%=product.name%>"
              />
            </div>
          </div>

          <!--Codigo Correspondiente a model-->
          <div class="formulario__grupo">
            <label for="model" class="formulario__label"></label>
            <div class="formulario__grupo-input">
              <input
                type="text"
                class="formulario__input"
                name="model"
                id="model"
                placeholder="<%=product.model%>"
              />
            </div>
          </div>

          <!--Codigo Correspondiente a DescripciÃ³n-->
          <div class="formulario__grupo">
            <label for="detail" class="formulario__label"></label>
            <div class="formulario__grupo-input">
                <input
                  type="text"
                  class="formulario__input"
                  name="detail"
                  id="detail"
                  placeholder="Caracteristicas"
                />
            </div>
          </div>

          <!--Codigo Correspondiente a Imagen-->
          <div class="formulario__grupo">
            <label for="imagen" class="formulario__label">Imagen de Producto</label>
            <div class="formulario__grupo-input">
              <input
                type="file"
                name="imagen"
                id="imagen"
                multiple
                class="formulario__input"
              />
            </div>
          </div>

          <!--Codigo Correspondiente a Categoria-->
          <div class="formulario__grupo">
            <label for="categoria" class="formulario__label"
              >Selecciona su Categoria</label
            >
            <div class="formulario__categoria">
              <label class="category-text">Categoria</label> 
              <br>
                <label for="category">Celulares</label>
                <input type="checkbox" name="category" value="Portatiles" />
                <br />
                <label for="category">Tablets</label>
                <input type="checkbox" name="category" value="Portatiles" />
                <br />
                <label for="category"></label>Notebook</label>
                <input type="checkbox" name="category" value="Portatiles" />
                <br />
                <label for="category">PC</label>
                <input type="checkbox" name="category" value="Computadoras" />
                <br />
                <label for="category">Accesorios</label>
                <input type="checkbox" name="category" value="Accesorios"/>
                <br />
            </div>
          </div>

          <!--Codigo Correspondiente a Colores-->
          <div class="formulario__grupo">
            <label for="color" class="formulario__label"
              >Seleccione un color</label
            >
            <div class="formulario__color">
              <select name="color">
                <option>Negro</option>
                <option>Gris</option>
                <option>Rojo</option>
                <option>Verde</option>
                <option>Azul</option>
                <option>Amarillo</option>
                <option>Naranja</option>
                <option>Violeta</option>
                <option>Marron</option>
              </select>
            </div>
          </div>

          <!--Codigo Correspondiente a price-->
          <div class="formulario__grupo">
            <label for="price" class="formulario__label"></label>
            <div class="formulario__grupo-input">
              <input
                type="number"
                class="formulario__input"
                name="price"
                id="price"
                placeholder="<%=product.price%>"
              />
            </div>
          </div>

          <!--Codigo Correspondiente a Descuento-->
          <div class="formulario__grupo">
            <label for="discount" class="formulario__label"></label>
            <div class="formulario__grupo-input">
                <input
                  type="number"
                  class="formulario__input"
                  name="discount"
                  id="discount"
                  placeholder="Descuento"
                />
            </div>
          </div>

          <!--Codigo Correspondiente a Boton de Carga-->
          <div class="formulario__grupo formulario__grupo-btn-enviar">
            <button type="submit" class="formulario__btn">
              Guardar cambios
            </button>
          </div>
        </form>

        <!--Codigo Correspondiente a Div Banner-->
        <div class="banner"></div>
      </div>
    </main>
  </body>
</html>
